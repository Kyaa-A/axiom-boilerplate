# Application
APP_NAME="AI Boilerplate API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# API
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_boilerplate
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Supabase (Auth & Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_JWT_ALGORITHM=HS256
SUPABASE_JWT_AUDIENCE=authenticated

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=EmbeddingRecord
WEAVIATE_TIMEOUT_SECONDS=30

# Cerebras AI (LLM Provider)
CEREBRAS_API_KEY=your-cerebras-api-key
CEREBRAS_MODEL=llama3.1-8b
CEREBRAS_MAX_TOKENS=1024
CEREBRAS_TEMPERATURE=0.7

# Voyage AI (Embeddings Provider)
VOYAGE_API_KEY=your-voyage-api-key
VOYAGE_MODEL=voyage-2
VOYAGE_EMBEDDING_DIMENSION=1024

# n8n Integration (Optional)
N8N_WEBHOOK_URL=
N8N_API_KEY=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
